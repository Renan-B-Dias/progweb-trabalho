<div class="container login-container">
  <div class="card-panel">
    <% if flash[:alert] %>
      <p class="error-message center"><%= flash[:alert] %></p>
    <% end %>
    <h2 class="center">Login</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, required: true %>
      </div>

      <div class="field">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'Lembrar de mim' %>
        </div>
      <% end -%>

      <div class="row center">
        <%= f.submit "Entrar", class: 'btn login-button-space' %>
      </div>
      <hr>
      <p class="center">
        <%= link_to "Cadastre-se", new_registration_path(resource_name), class: "btn login-button-space light-blue white-text" %>
      </p>
    <% end %>
  </div>
</div>