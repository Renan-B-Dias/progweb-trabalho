<div class="container">

  <h2>Cadastra-se</h2>

  <div class="card-panel">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, required: true %>
      </div>

      <div class="input-field">
        <%= f.label :email %>
        <%= f.email_field :email, required: true %>
      </div>

      <div class="input-field">
        <%= f.label :course_id, 'Curso' %>
        <%= f.select :course_id, select_course_options %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off", required: true %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true%>
      </div>

      <div class="actions">
        <%= f.submit "Enviar", class: "btn login-button-space" %>
      </div>
    <% end %>
  </div>

</div>
